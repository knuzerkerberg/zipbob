<script>
  const historyStack = [];

  function show(id) {
    document.querySelectorAll(".container").forEach(c => c.classList.remove("active"));
    document.getElementById(id).classList.add("active");
    historyStack.push(id);
  }

  function goBack() {
    historyStack.pop(); // í˜„ì¬ í˜ì´ì§€ ì œê±°
    const prev = historyStack.pop(); // ì´ì „ í˜ì´ì§€
    if (prev) show(prev);
    else show("home");
  }

  function selectMenu(menu) {
    document.getElementById("menuTitle").innerText = menu + " ë ˆì‹œí”¼";
    show("recipe");
  }

  function goToCoupang() {
    const selected = Array.from(document.querySelectorAll("#ingredientList input:checked"))
      .map(i => i.value)
      .join("+");
    const url = "https://www.coupang.com/np/search?q=" + encodeURIComponent(selected);
    window.open(url, "_blank");
  }
</script>

